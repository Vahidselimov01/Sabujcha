
@using Sabujcha.ViewModels;
@model AboutVM

<table class="table">
    <thead>
        <tr>
            <th>
                Id
            </th>
            <th>
                Name
            </th>
            <th>
                Description
            </th>
            <th>
                Title
            </th>
            <th>
              Image
            </th>
            <th>
                <p>Signature <span style="color:red">2ci Photo</span></p>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>

     
        

       @foreach (var item in Model.AboutUsAreas)
        {
            <tr>
                <td>
                    @item.Id
                </td>
                <td>
                    @item.Name
                </td>
                <td>
                    @item.Description
                </td>
                <td>
                    @item.Title
                </td>
                <td>
                    <img alt="productsImage" src="@item.ImageUrl">
                </td>
                <td>
                    <img alt="productsImage" src="@item.Signature">
                </td>
            </tr>
            <tr>

                <td style="color:white">
                    <a style="color:white" class="btn btn-warning btn-rounded" asp-area="SabujchaAdminPanel" asp-controller="About" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                </td>
                <td>
                    <a style="color:white" class="btn btn-danger btn-rounded" asp-area="SabujchaAdminPanel" asp-controller="About" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
                <td>
                    <a style="color:white" class="btn btn-success btn-rounded" asp-area="SabujchaAdminPanel" asp-controller="About" asp-action="detail" asp-route-id="@item.Id">Detail</a>
                </td>
                <td>
                    <p>
                        <a style="color:white" class="btn btn-primary btn-rounded" asp-area="SabujchaAdminPanel" asp-controller="About" asp-action="Create">Create</a>
                    </p>
                </td>
            </tr>
        }
        
    </tbody>

</table>
