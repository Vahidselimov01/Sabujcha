@using Sabujcha.Areas.SabujchaAdminPanel.ViewModels;
@model List<UserEditVM>

<h2>User List</h2>


<table class="table">
    <thead>
        <tr>
            <th>Username</th>
            <th>Email</th>
            <th>FirstName</th>
            <th>LastName</th>
            <th>Status</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.UserName</td>
                <td>@user.Email</td>
                <td>@user.FirstName</td>
                <td>@user.LastName</td>
                <td>@(user.IsBlock ? "Blocked" : "Active")</td>
                <td>
                    <form method="post" asp-controller="UserEdits" asp-action=UserEdit>
                        <input type="hidden" name="userId" value="@user.UserId" />
                        <input type="submit" value="@(user.IsBlock ? "Unblock" : "Block")" class="btn btn-primary" />
                        <input type="submit" asp-controller="UserEdits" asp-action="UserDelete" class="btn btn-danger" value="UserDelete">
                        <input type="submit" asp-controller="UserEdits" asp-action="UserCreate" class="btn btn-success" value="UserCreate">
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
